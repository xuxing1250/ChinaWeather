<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.chinaweather.CityWeather"
    android:background="@drawable/bg1">


    <TextView
        android:id="@+id/city_choose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="请选择或输入城市的名字：" />
    <TableLayout
        android:id="@+id/TableLayout02"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <TableRow
            android:id="@+id/TableRow01"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">
            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msg"
                android:textStyle="bold"
                android:textSize="8pt"
                android:layout_marginLeft="8px"
                android:textColor="@color/black"
                android:layout_weight="1"
                >
            </TextView>
            <Spinner
                android:id="@+id/Spinner01"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:paddingLeft="10px"
                android:minWidth="200px"
                android:layout_weight="5">
            </Spinner>

            <Button
                android:id="@+id/Button01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/OK"
                android:layout_gravity="center"
                android:layout_weight="1">

            </Button>
        </TableRow>
    </TableLayout>
    <TableLayout android:id="@+id/TableLayout002" android:layout_height="wrap_content" android:layout_width="fill_parent">
        <TableRow android:id="@+id/TableRow001" android:layout_height="wrap_content" android:layout_width="fill_parent">
            <TextView android:layout_weight="1" android:id="@+id/TextView002" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/msg" android:textStyle="bold" android:textSize="8pt" android:layout_marginLeft="10px" android:textColor="@color/black">

            </TextView>
            <EditText
                android:layout_weight="5"
                android:id="@+id/EditText001"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:paddingLeft="10px"
                android:minWidth="200px">

            </EditText>
            <Button
                android:layout_weight="1"
                android:id="@+id/Button001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询"
                android:paddingLeft="10px">

            </Button>
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/weatherText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
